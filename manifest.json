{
    "name": "Testudo Reviews",
    "version": "0.1.0",
    "description": "A streamlined process for reviewing course and professor evaluations using the PlanetTerp API directly integrated as a browser extension.",
    "permissions": ["tabs"],
    "host_permissions": ["https://*.testudo.umd.edu/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.testudo.umd.edu/*"],
            "js": ["contentScript.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["assets/logo.png"],
            "matches": ["https://*.testudo.umd.edu/*"]
        }
    ],
    "action": {
        "default_icon": {
          "16": "assets/logo.png",
          "24": "assets/logo.png",
          "32": "assets/logo.png"
        },
        "default_title": "PlanetTerp Reviews",
        "default_popup": "popup.html"
      },
    "manifest_version": 3
}